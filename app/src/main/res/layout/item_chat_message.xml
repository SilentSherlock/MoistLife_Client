<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_small"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="wrap_content"
        android:id="@+id/left_layout"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_marginStart="7dp"
            android:layout_marginEnd="7dp"
            android:id="@+id/left_avatar"
            android:layout_width="@dimen/icon_big"
            android:layout_height="@dimen/icon_big"
            app:shapeAppearanceOverlay="@style/roundImageShape"
            android:layout_gravity="center_vertical"
            android:scaleType="fitXY"
            android:src="@mipmap/avatar_2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="3dp"
            android:id="@+id/left_text"
            android:text="hello000000?"
            android:background="@drawable/chat_message_background_left"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/right_layout"
        android:orientation="horizontal"
        android:layout_alignParentEnd="true"
        android:gravity="end">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:layout_marginTop="5dp"
            android:id="@+id/right_text"
            android:text="hello0000000000?"
            android:background="@drawable/chat_message_background_right"/>
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_marginStart="7dp"
            android:layout_marginEnd="7dp"
            android:id="@+id/right_avatar"
            android:layout_width="@dimen/icon_big"
            android:layout_height="@dimen/icon_big"
            app:shapeAppearanceOverlay="@style/roundImageShape"
            android:layout_gravity="center_vertical"
            android:scaleType="fitXY"
            android:src="@mipmap/avatar_2"/>
    </LinearLayout>
</RelativeLayout>