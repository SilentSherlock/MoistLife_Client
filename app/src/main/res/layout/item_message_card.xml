<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_small"
        android:orientation="horizontal">
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_marginStart="@dimen/nav_bar_padding_top"
            android:id="@+id/item_message_avatar"
            android:layout_width="@dimen/icon_biggest"
            android:layout_height="@dimen/icon_biggest"
            app:shapeAppearanceOverlay="@style/roundImageShape"
            android:layout_gravity="center_vertical"
            android:scaleType="fitXY"
            android:src="@mipmap/avatar_2"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_margin="@dimen/input_margin_top">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_message_user_name"
                android:text="社区精选"
                android:textAppearance="?attr/textAppearanceHeadline6"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_message_hint"
                android:text="您的订阅有更新哦"
                android:textAppearance="?attr/textAppearanceSubtitle2"
                android:textColor="?android:attr/textColorSecondary"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/message_time"
                android:layout_margin="@dimen/view_left_padding"
                android:text="10:07" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/message_count"
                android:text="0"/>
        </LinearLayout>
    </LinearLayout>
    <View
        style="@style/line_style"/>
</LinearLayout>